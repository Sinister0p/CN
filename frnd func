#include <iostream>
using namespace std;

class Box {
private:
    double width;

public:
    Box(double w) : width(w) {}

    
    friend void showWidth(const Box& b);
};


void showWidth(const Box& b) {
    
    cout << "The width of the box is: " << b.width << endl;
}

int main() {
    Box myBox(15.75);

    
    showWidth(myBox);

    return 0;
}
