class Shape:
    author = 'Joshua'

    def _init_(self, x, y):
        self.x = x
        self.y = y

    def area(self, x, y):
        self.x = x
        self.y = y
        a = self.x * self.y
        print('Area of a rectangle', a)
        print(author)


class Square(Shape):  
    def _init_(self, x):
        self.x = x

    def area(self, x):
        self.x = x
        a = self.x * self.x
        print('Area of a square', a)


#Output = 
# Create a Shape object
s = Shape()
s.area(5, 10)

# Create a Square object
sq = Square()
sq.area(4)

