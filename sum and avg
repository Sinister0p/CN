#include <iostream>
using namespace std;

int main() {
    int n, number, sum = 0;
    float average;

    cout << "Enter the number of elements: ";
    cin >> n;

    for(int i = 1; i <= n; i++) {
        cout << "Enter number " << i << ": ";
        cin >> number;
        sum += number;
    }

    average = static_cast<float>(sum) / n;

    cout << "Sum = " << sum << endl;
    cout << "Average = " << average << endl;

    return 0;
}
